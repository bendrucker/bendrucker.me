{
  "name": "bendrucker.me",
  "type": "module",
  "version": "1.0.0",
  "workspaces": [
    "packages/*",
    "workers/*"
  ],
  "scripts": {
    "dev": "astro dev",
    "build": "npm run build:packages && npm run types:generate && astro check && astro build",
    "build:packages": "npm run build --workspace=packages/logger -- --force && npm run build --workspace=packages/github -- --force",
    "preview": "astro preview",
    "sync": "astro sync",
    "astro": "astro",
    "format:check": "prettier --check .",
    "format": "prettier --write .",
    "lint": "eslint .",
    "lighthouse": "lhci autorun",
    "types:generate": "wrangler types",
    "fetch-activity": "tsx scripts/fetch-github-activity.ts"
  },
  "dependencies": {
    "@astrojs/cloudflare": "12.6.12",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.0",
    "@resvg/resvg-wasm": "^2.6.2",
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^25.0.3",
    "astro": "^5.16.6",
    "date-fns": "^4.1.0",
    "dayjs": "^1.11.19",
    "lodash.kebabcase": "^4.1.1",
    "pino": "^10.1.0",
    "pino-pretty": "^13.1.3",
    "remark-collapse": "^0.1.2",
    "remark-toc": "^9.0.0",
    "satori": "^0.18.3",
    "sharp": "^0.34.5",
    "shiki": "^3.19.0",
    "tailwindcss": "^4.1.16"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@lhci/cli": "^0.15.1",
