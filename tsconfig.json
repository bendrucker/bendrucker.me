{
  "extends": ["./tsconfig.base.json", "astro/tsconfigs/strict"],
  "include": [".astro/types.d.ts", "src/**/*", "scripts/**/*", "packages/**/*", "workers/**/*", "*.ts", "*.d.ts"],
  "compilerOptions": {
    "composite": false,
    "declaration": false,
    "paths": {
      "@/*": ["./src/*"]
    },
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "types": ["node"]
  }
}
