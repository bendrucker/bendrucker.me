.primary-nav
	
	text-align: center

	@media small
		font-size: 1.25em

	.nav-items
		list-style: none
		clearfix()

		display: inline-block
	.nav-item
		float: left
		margin: 0 .25em
		padding: @margin

		a
			display: block
		

		i
			position: relative
			top: .1em
			margin-right: .25em


		@media small
			margin: 0 .25em
			padding: 0
			border-radius: 5em
			overflow: hidden

			a
				clearfix()
				background: lighten(link-primary-color, 75%)

				&:hover
					background: lighten(link-primary-color, 60%)

				transition: .2s all linear

			i, span
				display: block
				float: left

			v-padding = .5em

			i
				padding: v-padding .75em
				top: 0
				margin: 0

				background-color = darken(link-primary-color, 30%)
				background: rgba(background-color, .5)
				color: white

				text-shadow: 0 1px 1px rgba(darken(link-primary-color, 40%), .15)

			span
				padding: v-padding 1em
				color: darken(link-primary-color, 30%)

				text-shadow: 0 1px 0 white


		@media medium
			margin: 0 .75em

	&:after
		content: ''
		display: block
		width: 50%
		max-width: (remove-unit(max-container-width) / 2)em
		margin: 0 auto
		border-bottom: 2px solid header-border-color